{
    "name": "Go Cross-Compiler",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "runArgs": ["--gpus", "all"],
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "ms-vscode.go"
            ]
        }
    },
    "mounts": [
      "source=${localWorkspaceFolder},target=/workspace,type=bind",
      "source=${env:HOME}/.viam,target=/home/user/.viam,type=bind"
    ],
    "workspaceFolder": "/workspace"
  }
